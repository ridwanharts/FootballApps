<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="4dp"
	tools:context=".View.DetailActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="2dp"
		>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAlignment="center"
			android:text="Date Match"
			android:id="@+id/date_match"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="horizontal">


			<!--Home-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_gravity="center"
					android:id="@+id/iv_home"
					android:src="@drawable/img_arsenal"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_home_detail"
					android:text="Home Team"
					android:layout_gravity="center"
					android:textStyle="bold"
					android:layout_margin="2dp"
					android:textAllCaps="true"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_home_formation"
					android:textSize="14dp"
					android:text="4-3-3"
					android:layout_gravity="center"/>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/tv_home_score"
				android:textSize="20dp"
				android:text="0"
				android:layout_margin="4dp"
				android:textStyle="bold"
				android:layout_gravity="center"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20dp"
				android:text="vs"
				android:layout_margin="4dp"
				android:textStyle="bold"
				android:layout_gravity="center"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/tv_away_score"
				android:textSize="20dp"
				android:text="0"
				android:layout_margin="4dp"
				android:textStyle="bold"
				android:layout_gravity="center"/>

			<!--Home-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_height="wrap_content"
				android:layout_weight="4"
				android:orientation="vertical">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_gravity="center"
					android:id="@+id/iv_away"
					android:src="@drawable/img_mu"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_away_detail"
					android:text="Away Team"
					android:layout_gravity="center"
					android:textStyle="bold"
					android:textAllCaps="true"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_away_formation"
					android:textSize="14dp"
					android:layout_margin="2dp"
					android:text="4-3-3"
					android:layout_gravity="center"/>

			</LinearLayout>

		</LinearLayout>

		<!--Goals and Players Goal-->
		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/colorPrimaryDark"
			android:layout_margin="4dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--Home Goals-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:id="@+id/tv_home_goals"
					android:layout_gravity="center"
					android:paddingLeft="10dp"
					android:textStyle="bold"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textSize="12sp"
				android:textStyle="bold"
				android:text="TOTAL SHOTS"/>

			<!--Away goals-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_goals"
					android:paddingRight="10dp"
					android:textStyle="bold"/>
			</LinearLayout>

		</LinearLayout>


		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp">

			<!--Home Goals-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:paddingLeft="12dp"
					android:id="@+id/tv_home_pgoals"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textStyle="bold"
				android:textSize="12sp"
				android:text="SCORED BY"/>

			<!--Away goals-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"
					android:paddingRight="12dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_pgoals"
					android:textAlignment="textEnd"/>
			</LinearLayout>

		</LinearLayout>

		<!--LINEUP PLAYER-->
		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/colorPrimaryDark"
			android:layout_margin="4dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			>

			<!--Home Lineup forward-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:paddingLeft="10dp"
					android:id="@+id/tv_home_forward"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textStyle="bold"
				android:textSize="12sp"
				android:text="ATTACKER"/>

			<!--Away lineup forward-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"
					android:paddingRight="10dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_forward"
					android:textAlignment="textEnd"/>
			</LinearLayout>

		</LinearLayout>

		<!--batas-->

		<!--batas-->

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp">

			<!--Home Lineup mid-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_margin="2dp"
					android:textSize="12sp"

					android:paddingLeft="10dp"
					android:id="@+id/tv_home_midfield"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:textStyle="bold"
				android:layout_weight="1"
				android:textSize="12sp"
				android:text="MIDFIELDER"/>

			<!--Away Lineup mid-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"
					android:paddingRight="10dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_midfield"
					android:textAlignment="textEnd"
					/>
			</LinearLayout>

		</LinearLayout>

		<!--defend-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp">

			<!--Home Lineup defend-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:paddingLeft="10dp"
					android:id="@+id/tv_home_def"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textStyle="bold"
				android:textSize="12sp"
				android:text="DEFENDER"/>

			<!--Away lineup def-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"

					android:paddingRight="10dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_def"
					android:textAlignment="textEnd"/>
			</LinearLayout>

		</LinearLayout>

		<!--goalkeeper-->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp">

			<!--Home Lineup gk-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:paddingLeft="10dp"
					android:id="@+id/tv_home_gk"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textSize="12sp"
				android:textStyle="bold"
				android:text="GOALKEEPER"/>

			<!--Away lineup forward-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"

					android:paddingRight="10dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_gk"
					/>
			</LinearLayout>

		</LinearLayout>

		<!--LINEUP PLAYER-->
		<View
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/colorPrimaryDark"
			android:layout_margin="4dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp">

			<!--Home Lineup forward-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="2dp"
					android:textSize="12sp"
					android:paddingLeft="10dp"
					android:id="@+id/tv_home_sub"/>
			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_margin="2dp"
				android:textAlignment="center"
				android:layout_weight="1"
				android:textStyle="bold"
				android:textSize="12sp"
				android:text="SUBTITUTION"/>

			<!--Away lineup forward-->
			<LinearLayout
				android:layout_width="1dp"
				android:layout_weight="4"
				android:orientation="vertical"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_margin="2dp"
					android:paddingRight="10dp"
					android:textSize="12sp"
					android:id="@+id/tv_away_sub"
					android:textAlignment="textEnd"/>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>